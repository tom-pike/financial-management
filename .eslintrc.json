{
	"env": {
		"browser": true,
		"es2020": true,
		"es6": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parser": "babel-eslint",
	"settings": {
		"react": {
			"pragma": "React",
			"version": "detect"
		}
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 1 }],
		"no-console": ["warn"],
		"no-mixed-spaces-and-tabs": "off"
	}
}
